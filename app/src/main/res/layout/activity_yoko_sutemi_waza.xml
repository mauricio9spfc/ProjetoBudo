<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="projetobudo.studio.com.projetobudo.YokoSutemiWaza">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/logo_budo2"
        android:layout_centerHorizontal="true"
        android:padding="8dp"/>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="500dp"
        android:layout_height="40dp"
        android:id="@+id/imageView2"
        android:background="@drawable/menu_fundo"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/botaoHomeId"
        android:background="@drawable/menu_home"
        android:layout_below="@+id/imageView"
        android:layout_toStartOf="@+id/botaoHistoriaId"
        android:layout_marginEnd="22dp" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/botaoHistoriaId"
        android:background="@drawable/menu_historia"
        android:layout_below="@+id/imageView"
        android:layout_toStartOf="@+id/botaoDicionarioId"
        android:layout_marginEnd="18dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/botaoDicionarioId"
        android:background="@drawable/menu_dicionario"
        android:layout_alignTop="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/botaoExameId"
        android:background="@drawable/menu_exame"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/botaoDicionarioId"
        android:layout_marginStart="16dp" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/botaoTecnicasId"
        android:background="@drawable/menu_tecnicas"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/botaoExameId"
        android:layout_marginStart="18dp" />


</RelativeLayout>
