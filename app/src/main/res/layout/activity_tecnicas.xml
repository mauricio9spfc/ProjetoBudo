<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="projetobudo.studio.com.projetobudo.VenhaNosConhecer"
    android:background="#ffffff">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/logo_budo2"
        android:layout_centerHorizontal="true"
        android:padding="8dp"/>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="500dp"
        android:layout_height="40dp"
        android:id="@+id/imageView2"
        android:background="@drawable/menu_fundo"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/botaoHomeId"
        android:background="@drawable/menu_home"
        android:layout_below="@+id/imageView"
        android:layout_toStartOf="@+id/botaoHistoriaId"
        android:layout_marginEnd="22dp" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/botaoHistoriaId"
        android:background="@drawable/menu_historia"
        android:layout_below="@+id/imageView"
        android:layout_toStartOf="@+id/botaoDicionarioId"
        android:layout_marginEnd="18dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/botaoDicionarioId"
        android:background="@drawable/menu_dicionario"
        android:layout_alignTop="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/botaoExameId"
        android:background="@drawable/menu_exame"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/botaoDicionarioId"
        android:layout_marginStart="16dp" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/botaoTecnicasId"
        android:background="@drawable/menu_tecnicas"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/botaoExameId"
        android:layout_marginStart="18dp" />

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:layout_below="@+id/imageView2"
    android:layout_alignParentStart="true"
    android:fillViewport="true"
    android:padding="15dp">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ASHI-WAZA"
        android:id="@+id/button_ashiwaza"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="#52a34c"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TE-WAZA"
        android:id="@+id/button_tewaza"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/button_ashiwaza"
        android:layout_centerHorizontal="true"
        android:background="#52a34c"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KOSHI-WAZA"
        android:id="@+id/button_koshiwaza"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/button_tewaza"
        android:layout_centerHorizontal="true"
        android:background="#52a34c"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MA-SUTEMI-WAZA"
        android:id="@+id/button_masutemiwaza"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/button_koshiwaza"
        android:layout_centerHorizontal="true"
        android:background="#52a34c"
        android:textColor="#ffffff"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YOKO-SUTEMI-WAZA"
        android:id="@+id/button_yokotemiwaza"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/button_masutemiwaza"
        android:layout_centerHorizontal="true"
        android:background="#52a34c"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KAESHI-WAZA"
        android:id="@+id/button_kaeshiwaza"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/button_yokotemiwaza"
        android:layout_centerHorizontal="true"
        android:background="#52a34c"
        android:textColor="#ffffff"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RENRAKU-RENKA-WAZA"
        android:id="@+id/button_renrakuwaza"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/button_kaeshiwaza"
        android:layout_centerHorizontal="true"
        android:background="#52a34c"
        android:textColor="#ffffff"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OSAEKOMI-WAZA"
        android:id="@+id/button_osaekomiwaza"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/button_renrakuwaza"
        android:layout_centerHorizontal="true"
        android:background="#52a34c"
        android:textColor="#ffffff"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHIME-WAZA"
        android:id="@+id/button_shimewaza"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/button_osaekomiwaza"
        android:layout_centerHorizontal="true"
        android:background="#52a34c"
        android:textColor="#ffffff"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KANSETSU-WAZA"
        android:id="@+id/button_kansetsuwaza"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/button_shimewaza"
        android:layout_centerHorizontal="true"
        android:background="#52a34c"
        android:textColor="#ffffff"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SHISEI e TAI SABAKI"
                android:id="@+id/button_taisabaki"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/button_kansetsuwaza"
                android:layout_centerHorizontal="true"
                android:background="#52a34c"
                android:textColor="#ffffff"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAGE-NO-KATA"
                android:id="@+id/button_nagenokata"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/button_taisabaki"
                android:layout_centerHorizontal="true"
                android:background="#52a34c"
                android:textColor="#ffffff"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KATAME-NO-KATA"
                android:id="@+id/button_katamenokata"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/button_nagenokata"
                android:layout_centerHorizontal="true"
                android:background="#52a34c"
                android:textColor="#ffffff"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JU-NO-KATA"
                android:id="@+id/button_junokata"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/button_katamenokata"
                android:layout_centerHorizontal="true"
                android:background="#52a34c"
                android:textColor="#ffffff"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
